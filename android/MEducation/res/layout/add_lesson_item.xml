<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <EditText
            android:id="@+id/extraEditLessonResourceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:hint="Resource name"
            android:ems="10" />

        <Button
            android:id="@+id/extraBtnRemoveResource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/extraEditLessonResourceName"
            android:text="REMOVE\nTHIS FILE"
            android:textSize="10dp" />

        <Button
            android:id="@+id/extraBtnBrowseResource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/extraEditLessonResourceName"
            android:layout_toLeftOf="@+id/extraBtnRemoveResource"
            android:text="BROWSE\nFOR FILES"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/extraTextLessonResource"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/extraBtnBrowseResource"
            android:layout_alignBottom="@+id/extraBtnBrowseResource"
            android:layout_toLeftOf="@+id/extraBtnBrowseResource"
            android:gravity="center_vertical|left"
             />

</RelativeLayout>

</LinearLayout>